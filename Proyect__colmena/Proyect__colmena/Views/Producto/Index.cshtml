@using Dominio
@model IEnumerable<Dominio.Producto>

@{
    Layout = "~/Views/Shared/Master_Layout.cshtml";
    ViewBag.Title = "Listar Categorias";
}

<div style="float:left">
    <b>Productos:</b>
</div>
<br />


@Html.Partial("ProductoModal")
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#miModal">
    Abrir modal
</button>

<table class="table table-bordered table-striped table-hover js-basic-example dataTable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.DetalleProducto.PrecioCosto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DetalleProducto.PrecioVenta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DetalleProducto.Stock)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categoria.Nombre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DetalleProducto.PrecioCosto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DetalleProducto.PrecioVenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DetalleProducto.Stock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.Nombre)
            </td>

            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.IdProducto }) |
                <!--Html.ActionLink("Bloquear", "BloquearPersonaCorriente", new { idPersonaCorriente = item.personaCorrienteID })-->
            </td>
        </tr>
    }

</table>